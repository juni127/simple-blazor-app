            </div>
        </div>
    </div>
</Section>

@code
{
    private int SectionSelected { get; set; } = 0;

    private void selectSection(int section)
    {
        SectionSelected = section;
    }

    private string isSectionActive(int section)
    {
        return SectionSelected == section ? "active" : "";
    }
}