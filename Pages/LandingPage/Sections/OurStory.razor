@namespace LPSections
@using Components

<Section Id="story" BackgroundColor="#fafafa">
    <div class="col-12 col-sm-6 section-image">
        <img src="https://demo.ayroui.com/templates/business-template/assets/images/about/about-img1.jpg" />
    </div>
    <div class="col-12 col-sm-6 section-content">
        <h2>Our Story</h2>
        <h1>Our team comes with the experience and knowledge</h1>
        <div class="section-tab-controll">
            <MatButton Unelevated="@(SectionSelected == 0)" Outlined="@(SectionSelected != 0)"
                OnClick="@(() => selectSection(0))">Who We Are</MatButton>
            <MatButton Unelevated="@(SectionSelected == 1)" Outlined="@(SectionSelected != 1)"
                OnClick="@(() => selectSection(1))">Our Vision</MatButton>
            <MatButton Unelevated="@(SectionSelected == 2)" Outlined="@(SectionSelected != 2)"
                OnClick="@(() => selectSection(2))">Our History</MatButton>
        </div>
        <div class="section-container">
            <div class="section-item @isSectionActive(0)">
